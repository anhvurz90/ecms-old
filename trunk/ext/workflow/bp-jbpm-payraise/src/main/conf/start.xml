<?xml version="1.0" encoding="UTF-8"?>
<bundle>
  <task-name>Request Pay Raise</task-name>
  <title>Request Pay Raise</title>
  <submit>Submit</submit>
  <!--
  #variable title and label
  -->
  <reason>
    <title>Reason why you think you earn this pay raise</title>
    <label>Reason:</label>
  </reason>
  <amount-asked>
    <title>Your desired salary increase</title>
    <label>Amount:</label>
  </amount-asked>
  <rewarded>
    <title>was the requester rewarded</title>
    <label>Rewarded:</label>
    <checkbox>Yes, I was rewarded.</checkbox>
  </rewarded>
  <priority>
    <title>Request Priority</title>
    <label>Priority:</label>
    <select-0>not important</select-0>
    <select-1>important</select-1>
    <select-2>critical</select-2>
  </priority>
  
  <cancel>Cancel</cancel>
</bundle>