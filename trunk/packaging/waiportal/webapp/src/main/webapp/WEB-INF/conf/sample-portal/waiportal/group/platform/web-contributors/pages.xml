<page-set
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.gatein.org/xml/ns/gatein_objects_1_2 http://www.gatein.org/xml/ns/gatein_objects_1_2"
    xmlns="http://www.gatein.org/xml/ns/gatein_objects_1_2">

  <page>
    <name>wcm</name>
    <title>Content Explorer</title>
    <access-permissions>*:/platform/web-contributors</access-permissions>
    <edit-permission>manager:/platform/web-contributors</edit-permission>
    <portlet-application>
      <portlet>
        <application-ref>ecmexplorer</application-ref>
        <portlet-ref>FileExplorerPortlet</portlet-ref>
        <preferences></preferences>
      </portlet>
      <title>Content Explorer</title>
      <access-permissions>*:/platform/web-contributors</access-permissions>
      <show-info-bar>false</show-info-bar>
      <show-application-state>false</show-application-state>
      <show-application-mode>false</show-application-mode>
    </portlet-application>
  </page>

  <page>
    <name>SiteExplorer</name>
    <title>Content Explorer</title>
    <access-permissions>*:/platform/web-contributors</access-permissions>
    <edit-permission>manager:/platform/web-contributors</edit-permission>
    <portlet-application>
      <portlet>
        <application-ref>ecmexplorer</application-ref>
        <portlet-ref>FileExplorerPortlet</portlet-ref>
        <preferences>
			<preference>
				<name>driveName</name>     
				<value>Managed Sites</value>        
				<read-only>false</read-only>
			</preference>        	
        </preferences>
      </portlet>
      <title>Content Explorer</title>
      <access-permissions>*:/platform/web-contributors</access-permissions>
      <show-info-bar>false</show-info-bar>
      <show-application-state>false</show-application-state>
      <show-application-mode>false</show-application-mode>
    </portlet-application>
    <portlet-application>
      <portlet>
        <application-ref>authoring-apps</application-ref>
        <portlet-ref>AuthoringDashboard</portlet-ref>
      </portlet>
      <title>Authoring Dashboard</title>
      <access-permissions>*:/platform/web-contributors</access-permissions>
      <show-info-bar>false</show-info-bar>
      <show-application-state>false</show-application-state>
      <show-application-mode>false</show-application-mode>
    </portlet-application>
  </page>

  <page>
    <name>Editor</name>
    <title>Editor</title>
    <access-permissions>*:/platform/web-contributors</access-permissions>
    <edit-permission>manager:/platform/web-contributors</edit-permission>
    <show-max-window>true</show-max-window>
    <portlet-application>
      <portlet>
        <application-ref>ecmexplorer</application-ref>
        <portlet-ref>FileExplorerPortlet</portlet-ref>
        <preferences>
    			<preference>
    				<name>driveName</name>     
    				<value>collaboration</value>        
    				<read-only>false</read-only>
    			</preference>        	
    			<preference>
    				<name>showActionBar</name>     
    				<value>true</value>        
    				<read-only>false</read-only>
    			</preference>        	
    			<preference>
    				<name>editInNewWindow</name>     
    				<value>false</value>        
    				<read-only>false</read-only>
    			</preference>        	
    			<preference>
    				<name>usecase</name>     
    				<value>selection</value>        
    				<read-only>false</read-only>
    			</preference>        	
    			<preference>
    				<name>showSideBar</name>     
    				<value>false</value>
    				<read-only>false</read-only>
    			</preference>        	
    			<preference>
    				<name>showTopBar</name>     
    				<value>true</value>
    				<read-only>false</read-only>
    			</preference>        	
        </preferences>
      </portlet>
      <title>Editor</title>
      <access-permissions>*:/platform/web-contributors</access-permissions>
      <show-info-bar>false</show-info-bar>
      <show-application-state>false</show-application-state>
      <show-application-mode>false</show-application-mode>
    </portlet-application>
  </page>

  <page>
    <name>WcmAdmin</name>
    <title>WCM Administration</title>
    <access-permissions>manager:/platform/web-contributors</access-permissions>
    <edit-permission>manager:/platform/web-contributors</edit-permission>
    <portlet-application>
      <portlet>
        <application-ref>ecmadmin</application-ref>
        <portlet-ref>ECMAdminPortlet</portlet-ref>
        <preferences></preferences>
      </portlet>
      <title>WCM Administration</title>
      <access-permissions>*:/platform/web-contributors</access-permissions>
      <show-info-bar>false</show-info-bar>
      <show-application-state>false</show-application-state>
      <show-application-mode>false</show-application-mode>
    </portlet-application>
  </page>

  <page>
    <name>newslettermanager</name>
    <title>Newsletter Manager Portlet</title>
    <access-permissions>*:/platform/web-contributors</access-permissions>
    <edit-permission>manager:/platform/web-contributors</edit-permission>
    <portlet-application>
      <portlet>
        <application-ref>newsletter</application-ref>
        <portlet-ref>NewsletterManagerPortlet</portlet-ref>
        <preferences></preferences>
      </portlet>
      <title>Newsletter manager</title>
      <access-permissions>*:/platform/web-contributors</access-permissions>
      <show-info-bar>false</show-info-bar>
      <show-application-state>false</show-application-state>
      <show-application-mode>false</show-application-mode>
    </portlet-application>
  </page>

  <page>
    <name>formgenerator</name>
    <title>Form Generator Portlet</title>
    <access-permissions>*:/platform/web-contributors</access-permissions>
    <edit-permission>manager:/platform/web-contributors</edit-permission>
    <portlet-application>
      <portlet>
        <application-ref>formgenerator</application-ref>
        <portlet-ref>FormGeneratorPortlet</portlet-ref>
        <preferences></preferences>
      </portlet>
      <title>Form generator</title>
      <access-permissions>*:/platform/web-contributors</access-permissions>
      <show-info-bar>false</show-info-bar>
      <show-application-state>false</show-application-state>
      <show-application-mode>false</show-application-mode>
    </portlet-application>
  </page>

</page-set>
